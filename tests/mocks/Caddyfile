# https://caddyserver.com/docs/caddyfile
{
	debug
	local_certs
	log {
		output stdout
		format console
		level debug
	}
}

fedbox {
	handle /oauth/* {
		reverse_proxy http://auth-internal:8080
	}
	handle /actors/*/oauth/* {
		reverse_proxy http://auth-internal:8080
	}
	handle /.well-known/* {
		reverse_proxy http://point-internal:8080 {
			transport http
		}
	}

	reverse_proxy https://fedbox-internal:8443 {
		transport http {
			tls
			tls_insecure_skip_verify
		}
	}
}

brutalinks {
	handle /.well-known/* {
		reverse_proxy http://point-internal:8080 {
			transport http
		}
	}
	reverse_proxy https://brutalinks-internal:8443 {
		transport http {
			tls
			tls_insecure_skip_verify
		}
	}
}
